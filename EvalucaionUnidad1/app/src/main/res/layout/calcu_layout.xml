<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4">
    <EditText
        android:layout_columnSpan="4"
        android:id="@+id/edt_data"
        android:textSize="@dimen/default_size"
        android:layout_width="match_parent"/>
    <Button android:text="@string/_7"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_7"/>
    <Button android:text="@string/_8"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_8"/>
    <Button android:text="@string/_9"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_9"/>
    <Button android:text="@string/_multi"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_multi"/>
    <Button android:text="@string/_4"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_4"/>
    <Button android:text="@string/_5"
