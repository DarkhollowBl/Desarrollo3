        android:id="@+id/btn_3"/>
    <Button android:text="@string/_plus"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_add"/>
    <Button android:text="@string/_divide"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_div"/>
    <Button android:text="@string/_0"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_0"/>
    <Button android:text="@string/_dot"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_dot"/>
    <Button android:text="@string/_equals"
        android:textSize="@dimen/default_size"
        android:id="@+id/btn_result"/>
